{% extends 'base.html.twig' %}

{% block title%}Страница товара{% endblock %}

{% block body%}
    <h1>{{ product.name }}</h1>

    <div class="row">
        <div class="col-sm">
            {% if product.images.first %}
                <img class="card-img-top" src="{{ vich_uploader_asset(product.images.first , 'imageFile') | imagine_filter('product_detail') }}" alt="{{ product.name }}">
            {% else %}
                <img class="card-img-top" src="//placehold.it/500x500" alt="{{ product.name }}">
            {% endif %}
        </div>
        <div class="col-sm">

            <p>{{ product.description }}</p>
            <p>Цена: {{ product.price }}</p>

            {% if product.isTop %}
                <p>Aaaaaaaaa!!!</p>
            {% endif %}

            <a href="{{ path('homepage') }}">На главную</a>

        </div>
    </div>


{% endblock %}

